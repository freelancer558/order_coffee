		Order from : <%= user.email %> (<%=order.created_at%>) <br>
		Order Coffee : <%= coffee.name %> (<%= coffee.price.to_s%>à¸¿)<br>
		Order status : <%= status.name %>
	</div>
<% end %>
</div>